/* pages/blueDevices/blueDevices.wxss */
.container {
  height: 100vh;
  padding: 0;
  background: #f6f6f6;
}
.select-wrapper {
  display: flex;
  height: 130rpx;
  align-items: center;
  padding: 0 15px 0 10px;
  
}
.input-info {
  flex: 1;
  width: 100%;
  padding: 0;
}
.item-select {
  flex: 0 0 90rpx;
  height: 130px;
  width: 90rpx;
}
.item-power-radio {
  flex: 0 0 90rpx;
  height: 130rpx;
}
.select-title {
  padding-left: 0;
}
.content {
  height: calc(100vh - 350rpx);
  overflow: hidden;
  overflow-y: auto;
  -webkit-transition: all .3s linear;
	transition: all .3s linear;
}
.change-content {
  height: calc(100vh - 520rpx);
}
.item {
  padding: 0 15px;
  box-sizing: border-box;
  background: #fff;
}
.btn-wrapper {
  margin-top: 5px;
  padding: 0 15px;
}

.btn-scan {
  position: absolute;
  top: 40%;
  left: 20%;
  width: 60%;
}
.filter-content {
  position: relative;
	border-bottom: 1px solid #cbcbcb;
	padding: 0 15px;
  font-size: 12px;
	-webkit-transition: all .3s linear;
	transition: all .3s linear;
}

.filter-item {
  padding: 3px 0;
}
.filter-icon {
  font-size: 20px;
  color: #999;
}
.filter-value {
  text-align: right;
}
.filter-info {
	height: 0;
	overflow: hidden;
	-webkit-transition: all .3s linear;
	transition: all .3s linear;
}
.filter-show {
	padding-top: 10px;
	padding-bottom: 10px;
	height: 70px !important;
}
.item-img {
  position: relative;
}
.item-img .item-mark {
  position: absolute;
  top: -10rpx;
  left: 46rpx;
  background: #ef4f4f;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 100%;
  color: #fff;
}
.color-blue {
  color: #3ec2fc !important;
}
.color-red {
  color: #ef4f4f !important;
}
.cell-down {
	position: absolute;
	width: 50rpx;
	height: 80rpx;
	line-height: 80rpx;
  text-align: center;
	font-size: 16px;
	-webkit-transform: rotate(0deg);
  transform: rotate(0deg);
}
.icon-down {
  display: inline-block;
  -webkit-transform: rotate(0deg);
  transform: rotate(0deg);
  -webkit-transition: all .2s linear;
  transition: all .2s linear;
}
.active-down {
  -webkit-transform: rotate(-180deg);
  transform: rotate(-180deg);
}
.problem-desc {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  background: #eee;
}
.icon-problem1 {
  font-size: 40rpx;
  margin-right: 12rpx;
}
.problem-content {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 88%;
  background: #fff;
  border-radius: 10rpx;
  transform: translate(-50%, -50%);
  overflow: hidden;
}
.header {
  padding: 60rpx 30rpx;
	text-align: center;
	background: #f5f5f5;
}
.problem-round {
  margin: 0 auto;
	height: 150rpx;
	width: 150rpx;
	border: 1px solid #7f8285;
	border-radius: 100%;
	background: #fff;
}
.problem-blue,
.problem-light {
  position: relative;
	flex: 0 0 180rpx;
	width: 180rpx;
  font-size: 90rpx;
  color: #7f8285;
}
.problem-blue-desc {
  position: absolute;
	left: 0;
	bottom: -40rpx;
	width: 100%;
	text-align: center;
	letter-spacing: 4rpx;
  font-size: 28rpx;
	color: #7f8285;
}
.outer-icon {
  position: relative;
  color: #7f8285;
}
.inner-icon {
  position: absolute;
	top: 46%;
	left: 50%;
	font-size: 32rpx;
	color: #00c0ef;
	transform: translate(-50%, -50%);
}
.problem-line {
  position: relative;
	font-size: 30rpx;
}
.line-desc {
  position: absolute;
	top: -30rpx;
	letter-spacing: 3rpx;
	color: #7f8285;
}
.line {
	display: inline-block;
	height: 0;
	margin: 0 auto;
	width: 95%;
	border-bottom: 1px dashed #7f8285;
}
.content-info {
  padding: 30rpx 40rpx;
}
.info-header {
  margin: 30rpx 0;
	font-size: 34rpx;
	font-weight: 600;
	text-align: left !important;  
}
.info-desc {
  line-height: 50rpx;
  color: #595959;
}