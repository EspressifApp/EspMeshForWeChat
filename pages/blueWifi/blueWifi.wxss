/* pages/blueWifi/blueWifi.wxss */
.container {
  display: block;
  padding: 0;
  min-height: 100vh;
  background: #f6f6f6;
}
.header-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 45vh;
  width: 100%;
  background: #3ec2fc;
  border-bottom-right-radius: 40px;
  border-bottom-left-radius: 40px;
}
.header-image {
  position: relative;
  top: -80rpx;
  font-size: 320rpx;
  color: #fff;
}
.content-wrapper {
  position: absolute;
  top: 38vh;
  left: 15px;
  height: 50vh;
  min-height: 200px;
  width: calc(100% - 30px);
  padding: 15px;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0px 0px 3px #fff;
  color: #818181;
}
.title {
  margin: 10px 0;
  text-align: center;
  font-size: 16px;
}
.section-input {
  margin-top: 25px;
  position: relative;
}
.title-desc {
  position: absolute;
  top: 0;
  left: 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  width: 150rpx;
  color: #000;
  z-index: 10;
}
.form-input {
  height: 80rpx;
  border: 1px solid #ededed;
  padding-left: 20rpx;
  border-radius: 5px;
  font-size: 14px;
  box-sizing: border-box;
}
.disabled {
  background: #ededed;
  padding-left: 170rpx;
  color: #000;
}
.placeholder {
  color: #ababab;
}
.section-btn {
  position: absolute;
  width: calc(100% - 30px);
  bottom: 20px;
}